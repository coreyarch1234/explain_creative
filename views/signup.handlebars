<div class="container">
    <div class="col-sm-offset-3 col-sm-6 jumbotron">
        <legend>Get Ready To Enter ShowCase</legend>
        <form id='signup'>
            <div class="form-group">
                <input type="text" name='first' class="form-control" id="first" placeholder="First Name">
                <input type="text" name='last' class="form-control" id="last" placeholder="Last name">
            </div>
            <input type="email" name='email' class="form-control" id="email" placeholder="Email"><br>
            <input type="password" name='password' class="form-control" id="password" placeholder="Password"><br>
            <button type='submit' class="btn btn-primary btn-responsive button-create-showcase">Register</button>
        </form>
    </div>
</div>
