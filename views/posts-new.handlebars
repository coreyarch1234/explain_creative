<div class="container">
    <div class="row">
        <div class="col-sm-offset-3 col-md-6">
            <legend>Share a Video</legend>
            <form action='/posts' id='new-post'>
                <input type="string" placeholder= "Enter a title for your video" name="title" />
                <input type="string" placeholder= "Paste the Youtube Link" name="video_url" />
                <button type='submit'>Save</button>
            </form>
            </br>
            <ul class="list-group" id="posts">
              {{#each posts}}
                <li class='list-group-item'>
                    <a href= '/posts/{{this._id}}'>{{this.body}}</a>
                    <div class="remove-post" data-id="{{this._id}}">Remove</div>
                    <a href= '/posts/{{this._id}}/edit'>Edit</a>
                </li>
              {{/each}}
            </ul>
        </div>
    </div>
</div>
